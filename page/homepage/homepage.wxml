<!--page/homepage/homepage.wxml-->
<!-- 天气 & 日历 + 背景-->
<view class="head_container" catchtap="jump_index">
  <view class="lay_row_spa" style="margin-top: 40rpx;">
    <!--天气和温度-->
    <view class="lay_col_cen1">
      <view class="lay_row_sta1">
        <image class="icon_calender" wx:if="{{weather_index==0}}" src="cloud://ainongcun-8gqgvm4b3eb5b5dc.6169-ainongcun-8gqgvm4b3eb5b5dc-1312374913/icon/晴.png"></image>
        <image class="icon_calender" wx:if="{{weather_index==1}}" src="https://s1.ax1x.com/2022/05/24/X9Wzbd.png"></image>
        <image class="icon_calender" wx:if="{{weather_index==2}}" src="cloud://ainongcun-8gqgvm4b3eb5b5dc.6169-ainongcun-8gqgvm4b3eb5b5dc-1312374913/icon/阴 (1).png"></image>
        <image class="icon_calender" wx:if="{{weather_index==3}}" src="cloud://ainongcun-8gqgvm4b3eb5b5dc.6169-ainongcun-8gqgvm4b3eb5b5dc-1312374913/icon/下雨.png"></image>
        <text style="margin-left: 20rpx;color: rgb(26, 155, 230);">{{weather.weather.data}}</text>
      </view>
      <view class="lay_row_sta1">
        <text style="margin-left: 25rpx;color: rgb(255, 255, 255);">{{weather.temperature.data}}℃</text>
      </view>
    </view>
    <!--地区和风力-->
    <view class="lay_col_cen1">
      <view class="lay_row_end1">
        <text style="margin-right: 20rpx; color: rgb(26, 155, 230);">{{weather.city.data}}</text>
      </view>
      <view class="lay_row_end1">
        <text style="margin-right: 20rpx;color: rgb(26, 155, 230);">风速{{weather.windpower.data}}</text>
      </view>
    </view>

  </view>
  <!-- <view  catchtap="onTapJump_1">
     <image  class="icon_calender" class="icon_calender" src="https://s1.ax1x.com/2022/05/24/X9bBW9.png"></image>
    </view> -->
</view>

<!-- 覆盖view 区块链+ 个人账号

-->

<view class="self_infor_container" wx:if="{{!falg}}">
    <block>
      <image class="self_headimage" bindtap="bindViewTap" src="cloud://ainongcun-8gqgvm4b3eb5b5dc.6169-ainongcun-8gqgvm4b3eb5b5dc-1312374913/icon/微信图片_20220608103612.png" mode="cover"></image>
      <text>{{login}}</text>
      <button class="button1" wx:if="{{!falg}}" catchtap="register">点击登录</button>
    </block>
</view>
<view class="self_infor_container" wx:else>
  <block>
      <image class="self_headimage" bindtap="bindViewTap" src="{{user.avatarUrl}}" mode="cover"></image>
      <text>{{user.nickName}}</text>
      <button class="button1" wx:if="{{falg}}" catchtap="button_my">个人中心</button>
    </block>
</view>

