page{
    box-sizing: border-box; 
    font-family: sans-serif;
  }
  .scroll-view-y{
    width: 100%;
    height: 100%;

    }
    .scroll-view-y .scroll-item-y{
      width: 100%;
      height: 100%;
    }



  .title {
    display: flex;
    flex-direction: row;
    font-size: 20px;
    margin: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
    align-items: center;
    justify-content: center;
  }
  
 
  .date {
    display:flex;
    flex-direction: row;
    align-items: center;
    color: #919191;
    margin-right: 38rpx;
  }
  
  
  
  .detail {
    color: #666;
    margin: 40rpx 22rpx 0;
    line-height: 44rpx;
    letter-spacing: 1px;
    font-size:14px;
  }
  .tool{
    height: 64rpx;
    margin: 20rpx 28rpx 20rpx 0;
    display: flex;
    justify-content: center;
  }
  .tool-item{
    align-items: center;
    margin-right: 30rpx;
    display: flex;
  }
  
  .tool-item:last-child{
    margin-right: 0rpx;
  }
  
  .tool-item image{
    height: 30rpx;
    width:30rpx;
    margin-right: 10rpx;
  }
  
  
.box{
    display: flex; 
    min-height: 100vh; 
    background-color: #ebf5fc; 
    width: 100%;
  }
  .container{
    position: relative; 
    display: flex; 
    width: 100%; 
  }
  .container .card{
    width: 100%;
    margin: 10px;
    padding: 40px 30px;
    border-radius: 40px; 
    background-color: #ebf5fc;
    box-shadow:-6px -6px 20px rgba(255, 255, 255,1), /*阴影*/
                6px 6px 20px rgba(255, 255, 255, 0.1);
  }
  .container .card:hover{ /*悬停时*/
    box-shadow: inset -6px -6px 20px rgba(0, 0, 0, 0), /*改为内部阴影*/
                inset 6px 6px 20px rgba(0, 0, 0, 0.05);
  }



 
  
  